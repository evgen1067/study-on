{% extends 'base.html.twig' %}

{% block title %}{{ lesson.name ~ ' / ' ~ lesson.course.name ~ ' / StudyOn' }}{% endblock %}

{% block body %}
    <h1 class="text-center m-3 lesson-name">{{ lesson.name }}</h1>

    <h5 class="fw-normal lesson-content">{{ lesson.content }}</h5>

    <div class="d-flex flex-column">
        <a class="btn btn-secondary mb-3" href="{{ path('app_course_show', { 'id': lesson.course.id }) }}">К курсу</a>

        {% if is_granted('ROLE_SUPER_ADMIN') %}
            <a class="btn btn-warning mb-3 app_lesson_edit" href="{{ path('app_lesson_edit', {'id': lesson.id}) }}">Редактировать</a>

            {{ include('lesson/_delete_form.html.twig') }}
        {% endif %}
    </div>
{% endblock %}